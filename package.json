{
  // 프로젝트의 기본 정보
  "name": "nodejs-learning-project",                    // 프로젝트 이름
  "version": "1.0.0",                                   // 프로젝트 버전 (1.0.0 = 첫 번째 완성 버전)
  "description": "Node.js 주요 기술들을 학습할 수 있는 종합 프로젝트",  // 프로젝트 설명
  "main": "server.js",                                  // 메인 파일 (프로그램이 시작되는 파일)
  
  // 실행 명령어들 (터미널에서 npm run 명령어로 실행할 수 있는 스크립트들)
  "scripts": {
    "start": "node server.js",                          // npm start - 서버를 시작합니다
    "dev": "nodemon server.js",                         // npm run dev - 개발용으로 서버를 시작합니다 (파일 변경 시 자동 재시작)
    "test": "jest"                                      // npm test - 테스트를 실행합니다
  },
  
  // 프로젝트 키워드들 (검색할 때 사용되는 단어들)
  "keywords": [
    "nodejs",        // Node.js 관련
    "express",       // Express 웹 프레임워크
    "mongodb",       // MongoDB 데이터베이스
    "jwt",           // JWT 토큰 인증
    "socket.io",     // 실시간 통신
    "learning"       // 학습용 프로젝트
  ],
  
  // 프로젝트 작성자
  "author": "Node.js 학습자",
  
  // 라이선스 (이 코드를 어떻게 사용할 수 있는지)
  "license": "MIT",  // MIT 라이선스 = 자유롭게 사용, 수정, 배포 가능
  
  // 프로덕션 의존성 (실제 서비스에서 필요한 라이브러리들)
  "dependencies": {
    "express": "^4.18.2",              // 웹 서버를 만드는 도구
    "mongoose": "^8.0.3",              // MongoDB와 연결하는 도구
    "jsonwebtoken": "^9.0.2",          // 사용자 인증을 위한 토큰 도구
    "bcryptjs": "^2.4.3",              // 비밀번호를 암호화하는 도구
    "cors": "^2.8.5",                  // 다른 웹사이트에서 접근을 허용하는 도구
    "dotenv": "^16.3.1",               // 환경 변수를 읽어오는 도구
    "multer": "^1.4.5-lts.1",          // 파일 업로드를 처리하는 도구
    "socket.io": "^4.7.4",             // 실시간 통신을 위한 도구
    "helmet": "^7.1.0",                // 보안을 강화하는 도구
    "express-rate-limit": "^7.1.5",    // 요청 제한을 설정하는 도구
    "joi": "^17.11.0",                 // 데이터 유효성 검사를 하는 도구
    "nodemailer": "^6.9.7"             // 이메일을 보내는 도구
  },
  
  // 개발 의존성 (개발할 때만 필요한 라이브러리들)
  "devDependencies": {
    "nodemon": "^3.0.2",               // 파일 변경 시 서버를 자동으로 재시작하는 도구
    "jest": "^29.7.0",                 // 테스트를 실행하는 도구
    "supertest": "^6.3.3"              // API 테스트를 도와주는 도구
  }
}
